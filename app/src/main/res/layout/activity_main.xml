<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:paddingRight="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="Enter URL"
            android:inputType="textWebEditText"
            android:textSize="13sp"
            android:background="@drawable/edit_text_custom"
            android:layout_margin="10dp"/>

        <ImageButton
            android:id="@+id/go_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@color/transparant"
            android:src="@drawable/icon_search"
            android:layout_margin="13dp"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/refresh"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="13dp"
            android:visibility="gone"
            android:background="@color/transparant"
            android:src="@drawable/refresh_icon" />

        <ImageButton
            android:id="@+id/stop"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="13dp"
            android:visibility="gone"
            android:background="@color/transparant"
            android:src="@drawable/icon_stop" />

    </RelativeLayout>
    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:visibility="invisible"/>

    <WebView
        android:layout_weight="0.01"
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/border">
    </WebView>

    <LinearLayout
        android:id="@+id/homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.98"
        android:visibility="visible">

        <Button
            android:id="@+id/bookmark_btn_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mangapark.net"/>
        <Button
            android:id="@+id/bookmark_btn_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ww3.heaventoon.com"/>
        <Button
            android:id="@+id/bookmark_btn_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.mangahasu.se"/>
        <Button
            android:id="@+id/bookmark_btn_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.bing.com"/>
        <Button
            android:id="@+id/bookmark_btn_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="www.google.com"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="5">

        <ImageButton
            android:id="@+id/fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparant"
            android:src="@drawable/icon_fullscreen" />


        <ImageButton
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparant"
            android:src="@drawable/back_arrow" />

        <ImageButton
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparant"
            android:src="@drawable/home_icon" />

        <ImageButton
            android:id="@+id/forward_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparant"
            android:src="@drawable/forward_arrow" />

        <ImageButton
            android:id="@+id/history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/transparant"
            android:src="@drawable/history_icon" />

    </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/miniscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/btn_miniscreen_custom"
        android:src="@drawable/icon_miniscreen" />


</RelativeLayout>